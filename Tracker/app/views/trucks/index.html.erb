<h1>Listing trucks</h1>

<table>
  <tr>
    <th>Truck name</th>
    <th>Owner</th>
    <th>Cuisine</th>
    <th>Url</th>
    <th>Twitter</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trucks.each do |truck| %>
  <tr>
    <td><%= truck.truck_name %></td>
    <td><%= truck.owner %></td>
    <td><%= truck.cuisine %></td>
    <td><%= truck.url %></td>
    <td><%= truck.twitter %></td>
    <td><%= link_to 'Show', truck %></td>
    <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
    <td><%= link_to 'Destroy', truck, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

